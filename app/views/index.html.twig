{% extends "layout.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
            <form id="login" action="{{ path("login") }}" method="POST">
                <div class="form-group">
                    <label for="username">Имя</label>
                    <input type="text" class="form-control" name="username" id="username"/>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" name="password" id="password"/>
                </div>
                <button class="btn btn-default pull-right">Войти</button>
            </form>
        </div>
        <div class="col-lg-4">
            <form id="login" action="{{ path("register") }}" method="POST">
                <div class="form-group">
                    <label for="username">Имя</label>
                    <input type="text" class="form-control" name="username" id="username"/>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" name="password" id="password"/>
                </div>
                <button id="register" class="btn btn-default">Зарегестрироваться</button>
            </form>
        </div>
    </div>
{% endblock %}
